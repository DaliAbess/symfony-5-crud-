{% extends 'base.html.twig' %}

{% block title %}Symfony Menu Manager{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Symfony Menu Manager</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('app_menu_new') }}"> 
                    Create New Menu 
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Id</th>
                        <th>Restau_id</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                    {% for menu in menus %}
                        <tr>
                            <td>{{ menu.id }}</td>
                            <td>{{ menu.restauId }}</td>
                            <td>{{ menu.image }}</td>
                            <td>
                                <a href="{{ path('app_menu_show', {'id': menu.id}) }}" class="btn btn-outline-info">Show</a>
                                <a href="{{ path('app_menu_edit', {'id': menu.id}) }}" class="btn btn-outline-success">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">No records found</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
