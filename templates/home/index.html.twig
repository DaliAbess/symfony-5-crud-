{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Restaurant Reservation</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        body {
            padding-top: 56px;
        }

        @media (min-width: 992px) {
            body {
                padding-top: 80px;
            }
        }

        /* Right align the navigation items */
        .navbar-nav.ml-auto {
            margin-right: 0;
            margin-left: 200px;
        }

        /* Style for Log In button */
        .nav-link.login-btn {
            color: #fff;
            background-color: #17a2b8;
            border-radius: 3px;
            padding: 8px 15px;
            margin-left: 300px;
        }

        /* Style for Sign Up button */
        .nav-link.signup-btn {
            color: #fff;
            background-color: #17a2b8;
            border-radius: 3px;
            padding: 8px 15px;
            margin-left: 10px;
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="{{ asset('fork_logo.png') }}" alt="Logo" width="60" height="60" class="d-inline-block " >
                Restaurant Reservations
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#reservation">Reservation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"></a>
                    </li>
                     {% if is_granted('ROLE_OWNER') %}
                    <li class="nav-item">
                        <a class="nav-link login-btn" href="{{ path('app_dashboard') }}">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link signup-btn" href="{{ path('app_logout') }}">Log Out</a>
                    </li>
                      
                    {% elseif is_granted('ROLE_USER') %}
                         <li class="nav-item">
                        <a class="nav-link login-btn" href="{{ path('restau_search') }}"> Reservation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link signup-btn" href="{{ path('app_logout') }}">Log Out</a>
                    </li>
                    {% else %}
                                        <li class="nav-item">
                        <a class="nav-link login-btn" href="{{ path('app_login') }}">Log In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link signup-btn" href="{{ path('app_register') }}">Sign Up</a>
                    </li>
                    {% endif %}
                                    
                       

                    
                </ul>
            </div>
        </div>
    </nav>

    <!-- Image Section -->
    <section id="image" class="py-5 text-center">
        <img src="{{ asset('reservation.jpg') }}" alt="Restaurant Image" class="img-fluid">
    </section>

    <!-- Header -->
    <header class="bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Welcome to Our Restaurant</h1>
            <p class="lead">Experience the finest dining with our online reservation system.</p>
        </div>
    </header>

    <!-- About Section -->
    <section id="about" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2 class="display-4">About Us</h2>
                    <p> </p>
                </div>
                <div class="col-lg-6">
                    <img src="{{ asset('tek-up.png') }}" alt="About Us Image" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </section>

    <!-- Reservation Section -->
    <section id="reservation" class="bg-light py-5">
        <div class="container">
            <h2 class="display-4 text-center">Make a Reservation</h2>
            <!-- Add your reservation form here -->
            <p class="text-center">Reservation form goes here...</p>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5">
        <div class="container">
            <h2 class="display-4 text-center">Contact Us</h2>
            <!-- Add your contact information and form here -->
            <p class="text-center">Contact information and form go here...</p>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2023 Restaurant Reservations</p>
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>

</html>



{% endblock %}
